                    {{ form_widget(formRecipe.difficulty) }}
                </div>
                <div class="form-group">
                        <label for="">Coût : </label>
                        {{ form_widget(formRecipe.cost) }}
                    </div> 
                    <div class="form-group">
                            <label for="">Temps de préparation : </label>
                            {{ form_widget(formRecipe.preparation_time) }}
                        </div>
                       
                        <div class="form-group">
                                <label for="">Temps de cuisson : </label>
                                {{ form_widget(formRecipe.cooking_time) }}
                            </div>
                            <div class="form-group">
                                    <div><label for="">Pour : </label>
                                        {{ form_widget(formRecipe.nb) }}</div>
                                        <div class=""><label for="">Unité : </label>
                                            {{ form_widget(formRecipe.unite) }}</div>
                                    </div>
                                </div>
                                 <button class="btn btn-success p-5 font-weight-bold">Enregistrer</button>
                            {{ form_end(formRecipe) }}
