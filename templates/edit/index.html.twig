{% block title %}Editer une recette!{% endblock %}

{% block body %}
<main class="" id="main">
    <div class="d-flex flex-column" id="container_forms">
    <div class="p-5 col-md-12" id="form_recipe">
    {{ form_start(formRecipe) }}
    <h1 class="text-center">Recette</h1>

    <div class="form-group">
        <label for="">Nom : </label>
        {{ form_widget(formRecipe.name) }}
